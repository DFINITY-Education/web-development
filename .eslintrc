{
  "extends": [
    "eslint:recommended",
  ],

  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },

  "plugins": [
    "svelte3"
  ],

  "overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],

  "rules": {
    "comma-dangle": ["error", "always-multiline"],
  }
}
